.chat-container
  position relative
  overflow auto
.chat-log-container
  padding-bottom 60px
.chat-input-container
  padding-top 8px
  padding-bottom 5px
  background-color #ECEFF1
  position absolute
  bottom 0px
  right 0px
  left 0px
  textarea
    min-height 48px
    max-height 120px
    color rgba(0, 0, 0, 0.87)
    border-color rgba(0, 0, 0, 0.12)
    border-width 0 0 1px 0
    line-height 20px
    resize none
    outline none
    -webkit-appearance none
    -moz-appearance none
    background none
    padding-top 2px
    padding-bottom 1px
    padding-left 15px
    padding-right 15px

    &:focus
      border-color rgb(96, 125, 139)
      border-width 0 0 2px 0
      padding-bottom 0px
  .file-upload
    position fixed
    top 0px
    bottom 0px
    left 0px
    right 0px
    z-index -1
    &.active
      z-index 10
      border 3px dashed rgb(29,  233,  182)

.chat-log
  margin-bottom 28px
  md-list-item
    word-wrap break-word
    min-height 32px
    padding 0px 16px
    div.md-list-item-text
      padding-top 8px
      padding-bottom 8px
      .chat-content p
        white-space pre-line
        color #444
    &:hover
      background-color #ECF7F6
      border solid
      border-color #ECEFF1
      border-width 1px 0 1px 0
      margin-top -1px
      margin-bottom -1px
      box-shadow 0 3px 1px -2px rgba(0, 0, 0, .2), 0 2px 2px 0 rgba(0, 0, 0, .14), 0 1px 5px 0 rgba(0, 0, 0, .12)
    .tool-bar
      position absolute
      bottom -28px
      right 50px
      background-color #ECF7F6
      z-index 99
      border solid
      border-color #ECEFF1
      border-width 0 1px 1px 1px
      border-radius 3px
      box-shadow 0 3px 1px -2px rgba(0, 0, 0, .2), 0 2px 2px 0 rgba(0, 0, 0, .14)
      .tool-button
        margin 0
        padding 0
        height 30px
        min-height 30px
        min-width 70px
        z-index 99
        background-color #ECF7F6 !important
        line-height normal

.md-toolbar-tools
  .sub-tool-buttons
    margin-right -8px
    top 73px

.download-button.md-button
  text-transform none
  margin-left 0px

md-sidenav.member-nav
  min-width 300px
  width 300px

md-tabs.stretch-tab
  md-pagination-wrapper
    position relative
    width auto
    display flex

  md-tab-item
    flex 1

.git-hub-markdown
  h1, h2, h3, h4, h5, h6
    margin: 20px 0 10px;
    padding: 0;
    font-weight: bold;
    -webkit-font-smoothing: antialiased;
    cursor: text;
    position: relative; 

  h1
    font-size: 28px;
    color: black; 
  h2
    font-size: 24px;
    border-bottom: 1px solid #cccccc;
    color: black; 
  h3
    font-size: 18px; 
  h4
    font-size: 16px; 
  h5
    font-size: 14px; 
  h6
    color: #777777;
    font-size: 14px; 
  p, blockquote, ul, ol, dl, li, table, pre
    margin: 15px 0; 
  h1 p, h2 p, h3 p, h4 p, h5 p, h6 p
    margin-top: 0; 

  li p.first {
    display: inline-block; 
  }
         
  ul,  ol {
    padding-left: 30px; 
  }
             
  ul:first-child, ol:first-child {
    margin-top: 0; 
  }
  
  ul:last-child, ol:last-child {
    margin-bottom: 0; 
  }
                     
  dl {
    padding: 0; 
  }
  dl dt {
    font-size: 14px;
    font-weight: bold;
    font-style: italic;
    padding: 0;
    margin: 15px 0 5px; 
  }
  dl dt:first-child {
    padding: 0; 
  }
  dl dt>:first-child {
    margin-top: 0; 
  }
  dl dt>:last-child {
    margin-bottom: 0; 
  }
  dl dd {
    margin: 0 0 15px;
    padding: 0 15px; 
  }
  dl dd>:first-child {
    margin-top: 0; 
  }
  dl dd>:last-child {
    margin-bottom: 0; 
  }
  blockquote {
    border-left: 4px solid #dddddd;
    padding: 0 15px;
    color: #777777; 
  }
  blockquote>:first-child {
    margin-top: 0; 
  }
  blockquote>:last-child {
    margin-bottom: 0; 
  }
  code, tt {
    margin: 0 2px;
    padding: 0 5px;
    white-space: nowrap;
    border: 1px solid #eaeaea;
    background-color: #f8f8f8;
    border-radius: 3px; 
  }
  pre code {
    margin: 0;
    padding: 0;
    white-space: pre;
    border: none;
    background: transparent; 
  }
  pre {
   background-color: #f8f8f8;
   border: 1px solid #cccccc;
   font-size: 13px;
   line-height: 19px;
   overflow: auto;
   padding: 6px 10px;
   border-radius: 3px; 
  }
  pre code, pre tt {
    background-color: transparent;
    border: none; 
  }
  table {
    padding: 0; 
    word-break: break-word;
  }
  table tr {
    border-top: 1px solid #cccccc;
    background-color: white;
    margin: 0;
    padding: 0; 
  }
  table tr:nth-child(2n) {
    background-color: #f8f8f8; 
  }
  table tr th {
    font-weight: bold;
    border: 1px solid #cccccc;
    text-align: left;
    margin: 0;
    padding: 6px 13px; 
  }
  table tr td {
    border: 1px solid #cccccc;
    text-align: left;
    margin: 0;
    padding: 6px 13px; 
  }
  table tr th:first-child, table tr td:first-child {
    margin-top: 0; 
  }
  table tr th:last-child, table tr td:last-child {
    margin-bottom: 0; 
  }
