.chat-input-container
  padding-top 8px
  padding-bottom 5px
  background-color #ECEFF1
  position relative
  textarea
    color rgba(0, 0, 0, 0.87)
    border-color rgba(0, 0, 0, 0.12)
    border-width 0 0 1px 0
    line-height 20px
    resize none
    outline none
    -webkit-appearance none
    -moz-appearance none
    background none
    padding-top 2px
    padding-bottom 1px
    padding-left 15px
    padding-right 15px

    &:focus
      border-color rgb(96, 125, 139)
      border-width 0 0 2px 0
      padding-bottom 0px
  .file-upload
    position absolute
    top 0px
    bottom 0px
    left 0px
    right 0px
    z-index -1
    &.active
      z-index 10

.chat-log
  margin-bottom 28px
  md-list-item
    min-height 32px
    div.md-list-item-text
      padding-top 8px
      padding-bottom 8px
      .chat-content
        white-space pre-line
    &:hover
      background-color #ECF7F6
      border solid
      border-color #ECEFF1
      border-width 1px 0 1px 0
      margin-top -1px
      margin-bottom -1px
    .tool-bar
      position absolute
      bottom -28px
      right 50px
      background-color #ECF7F6
      z-index 99
      border solid
      border-color #ECEFF1
      border-width 0 1px 1px 1px
      border-radius 3px
      .tool-button
        margin 0
        padding 0
        height 30px
        min-height 30px
        min-width 70px
        z-index 99
        background-color #ECF7F6 !important
        line-height normal

.download-button.md-button
  text-transform none
  margin-left 0px

md-sidenav.member-nav
  min-width 300px
  width 300px

md-tabs.stretch-tab
  md-pagination-wrapper
    position relative
    width auto
    display flex

  md-tab-item
    flex 1
