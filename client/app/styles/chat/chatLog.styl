.chat-input-container
  padding-top 8px
  padding-bottom 5px
  background-color #ECEFF1
  & textarea
    color rgba(0, 0, 0, 0.87)
    border-color rgba(0, 0, 0, 0.12)
    border-width 0 0 1px 0
    line-height 20px
    resize none
    outline none
    -webkit-appearance none
    -moz-appearance none
    background none
    padding-top 2px
    padding-bottom 1px
    padding-left 15px
    padding-right 15px

    &:focus
      border-color rgb(96, 125, 139)
      border-width 0 0 2px 0
      padding-bottom 0px

.chat-log
  md-list-item
    min-height 32px
    div.md-list-item-text
      padding-top 8px
      padding-bottom 8px
      .chat-content
        white-space pre-line

md-sidenav.member-nav
  min-width 300px
  width 300px

md-tabs.stretch-tab
  md-pagination-wrapper
    position relative
    width auto
    display flex

  md-tab-item
    flex 1
