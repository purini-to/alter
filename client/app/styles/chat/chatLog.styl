.chat-input-container
  margin-top 5px
  margin-bottom 8px
  & textarea
    color rgba(0, 0, 0, 0.87)
    border-color rgba(0, 0, 0, 0.12)
    border-width 0 0 1px 0
    line-height 20px
    resize none
    outline none
    -webkit-appearance none
    -moz-appearance none
    background none
    background-color #ECEFF1
    padding-top 2px
    padding-bottom 1px
    padding-left 15px
    padding-right 15px

    &:focus
      border-color rgb(96, 125, 139)
      border-width 0 0 2px 0
      padding-bottom 0px
