baseColor = #444
baseBgColor = #EEE

cardColor = white

html, body
  margin 0px
  font-family Verdana,  "游ゴシック",  YuGothic,  "Hiragino Kaku Gothic ProN",  Meiryo,  sans-serif
  // font-size 16px
  background-color baseBgColor
  color baseColor
  overflow hidden

md-card-content
  padding 10px

md-dialog
  md-toolbar:not(.full-dialog)
    min-height 32px
    .md-toolbar-tools
      height 32px
      min-height 32px
      white-space nowrap
      .md-subheader
        background-color transparent
        color rgba(255, 255, 255, 0.87)
        text-align center
        .md-subheader-inner
          padding 0
          font-size 16px

  &.full-dialog
    min-width 100%
    min-height 100%

    md-toolbar
      .md-button
        font-size 18px
        margin 0
        position absolute
        &.right-action
          top 13px
          right 5px
        &.left-action
          top 6px
          left 8px

      .md-tall
        h3
          padding-top 10px

      font-size 20px
      min-height 64px

    md-card
      margin 0
      &.overlap
        margin -50px auto 0 auto
        z-index 5
        min-width 680px

.md-button.md-default-theme[disabled]
  cursor not-allowed
  span
    color rgba(0, 0, 0, 0.26)

md-list-item
  position relative

md-chips[readonly='true'] md-chips-wrap
  cursor inherit

ng-md-icon.size-20 svg
  vertical-align -5px

ng-md-icon.size-32 svg
  vertical-align -10px

ng-md-icon.size-42 svg
  vertical-align -15px

md-input-container
  .help-message
    position absolute
    font-size 12px
    line-height 24px
    color grey

[ui-view]
  width 100%
  height 100%

.card
  background-color cardColor

.bg-none
  background-color transparent !important

.fab-box-2x
  width 100%
  height 60px

.tac
  text-align center

.m0
  margin 0px

.scroll
  overflow auto

.bg-back
  background-color baseBgColor !important

.no-border, md-chips.no-border md-chips-wrap.md-chips
  padding-bottom 0px
  box-shadow none
  border noen

.drop-box
  background #F8F8F8
  border 3px dashed #DDD
  &.dragover-file
    border 3px dashed rgb(29,  233,  182)

.hidden
  visibility hidden

.avator-area
  padding-left 8px

.avator
  height 60px
  width 60px
  border-radius 50%
  border none
  &.sm
    height 30px
    width 30px
  &.hidden
    min-height 0 !important
    height 0 !important
