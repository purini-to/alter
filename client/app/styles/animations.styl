page-anim-duration = 300ms
anim-duration = 500ms
anim-pop-duration = 300ms

positions(pos=absolute, top=0, right=0, bottom=0, left=0)
  position pos
  top top
  right right
  bottom bottom
  left left

.page-animation.ng-leave
  transform-style preserve-3d
  transition opacity ease-in-out page-anim-duration
  positions()

.page-animation.ng-enter
  transition opacity ease-in-out page-anim-duration
  positions()

.page-animation.ng-enter, .page-animation.ng-leave.ng-leave-active
  opacity 0

.page-animation.ng-enter.ng-enter-active
  opacity 1

.anim.anim-pop
  animation pop anim-pop-duration+anim-duration+200 forwards

.anim-pop.ng-hide-add,
.anim-pop.ng-hide-remove
  transition all linear anim-pop-duration

.anim-pop.ng-hide-add.ng-hide-add-active
.anim-pop.ng-hide-remove
  transform scale(0.3)
  opacity 0.5

.anim-pop.ng-hide-remove.ng-hide-remove-active
.anim-pop.ng-hide-add
  transform scale(1)
  opacity 1

.anim.anim-top2down
  animation top2down anim-duration forwards

.anim.anim-bottom2up
  animation bottom2up anim-duration forwards

.anim.anim-left2right
  animation left2right anim-duration forwards

@keyframes pop
  0%
    transform scale(0.0)
    opacity 0.5
  50%
    transform scale(0.0)
  100%
    transform scale(1)
    opacity 1

@keyframes top2down
  0%
    transform translate(0px, -100%)
  100%
    transform translate(0px, 0%)

@keyframes bottom2up
  0%
    transform translate(0px, 100%)
  100%
    transform translate(0px, 0%)

@keyframes left2right
  0%
    transform translate(-100%)
  100%
    transform translate(0%)
