side-nav-width = 256px

allWidth(width) {
  width width
  min-width width
  max-width width
}

my-top-nav.site-side-nav
  md-sidenav
    allWidth(side-nav-width)

.nav-menu
  list-style none
  padding 0
  margin 0

  .md-button
    cursor pointer
    display block
    line-height 40px
    margin 0
    max-height 40px
    padding 0px 16px
    text-align left
    text-decoration none
    white-space normal
    width 100%
    font-size 16px

  ng-md-icon
    position absolute
    top 13%
    right 16px

  .nav-sabmenu
    padding 0

    &.open
      animation toggle-menu-open 500ms ease
    &.close
      animation toggle-menu-close 500ms ease

    .md-button
      padding 0px 16px 0px 32px
      font-size 14px
